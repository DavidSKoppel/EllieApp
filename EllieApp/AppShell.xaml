<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EllieApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:EllieApp.Views"
    xmlns:local="clr-namespace:EllieApp"
    FlyoutBehavior="Disabled"
    Title="EllieApp"
    Shell.TabBarTitleColor="{StaticResource Tertiary}"
    Shell.TabBarForegroundColor="{StaticResource Tertiary}">
    <TabBar>
        <Tab Title="Alarm" Icon="bell.png">
            <views:MainPage/>
        </Tab>
        <Tab Title="Shop" Icon="shoppingcart.png">
            <views:PointShopPage/>
        </Tab>
    </TabBar>
</Shell>
